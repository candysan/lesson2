<!DOCTYPE html>
<html>
<head>
  <title>Lesson2</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<ul class="nav nav-pills">
  <li role="presentation" class="active"><a href="#">Home</a></li>
  <li role="presentation"><a href="#">Profile</a></li>
   <form class="navbar-form navbar-left" role="search">
  <div class="form-group">
    <input type="text" class="form-control" placeholder="Search">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>

</ul>
   <% if user_signed_in? %>
   <a href="/users/<%= current_user.id %>"><%= current_user.username %>のマイページ</a>
   <br>
  <button type="button" class="btn btn-default navbar-btn"><%= link_to "サインアウト", destroy_user_session_path, method: :delete %></button>
  
  <% else %>
<button type="button" class="btn btn-default navbar-btn"><%= link_to "ログイン", new_user_session_path, method: :get %></button>
<button type="button" class="btn btn-default navbar-btn"><%= link_to "新規登録", new_user_registration_path, method: :get %></button>

 <% end %>

<%= yield %>


</body>
</html>
